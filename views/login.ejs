<!DOCTYPE html>
<html>
  <head>
    <title>voting-platform</title>
    <link rel="stylesheet" href="/stylesheets/auth.css" />
  </head>
  <body>
    <a href="/" class="home">Home</a>
    <h1>Login</h1>
    <div class="error-msg"><%= typeof errorMsg !== "undefined" ? errorMsg : "" %></div>
    <form action="/auth/login" method="POST">
      <div>
        <input
          type="email"
          class="auth"
          name="email"
          placeholder="Email"
        >
      </div>
      <div>
        <input
          type="password"
          class="auth"
          id="password"
          name="password"
          placeholder="Password"
        >
      </div>
      <div>
        <label>Show password
          <input type="checkbox" id="checkbox" onclick="toggleModeSignIn()">
        </label>
      </div>
      <div class="footer">
        <a href="/auth/signup" class="move">Create account</a>
        <input type="submit" class="submit-login" value="Next">
      </div>
    </form>
  </body>
  <script src="/javascripts/login.js"></script>
</html>
